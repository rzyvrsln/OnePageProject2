@using OnePageProject2.Models

@{
    ViewData["Title"] = "Index";
}

@model ICollection<Employee>

<div class="wrapper">
    <div class="content-wrapper" style="padding-top:20px">
        <section class="content ">
            <div class="card container">
                <div class="card-header">
                    <h3 class="card-title">Posts</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        @*<button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                        <i class="fas fa-times"></i>
                        </button>*@
                    </div>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped projects">
                        <thead>
                            <tr>
                                <th> #</th>
                                <th>Name</th>
                                <th> Surname</th>
                                <th> Facebook</th>
                                <th>Instagram</th>
                                <th>Twitter</th>
                                <th> Position</th>
                                <th>Image </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int count = 0;
                            }

                            @foreach (var employee in Model ?? new List<Employee>())
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@employee.Name</td>
                                    <td>@employee.Surname</td>
                                    <td>@employee.Facebook</td>
                                    <td>@employee.Instagram</td>
                                    <td>@employee.Twitter</td>
                                    <td>@employee.Position?.Name</td>

                                    <td>
                                        <img alt="Image" class="table-avatar" src="~/assets/img/employee/@employee.ImageUrl">
                                    </td>


                                    <td class="project-actions text-right">
                                        <a class="btn btn-primary btn-sm" asp-controller="Employee" asp-action="View" asp-route-id="@employee.Id">
                                            <i class="fas fa-folder">
                                            </i>
                                            View
                                        </a>
                                        <a class="btn btn-info btn-sm" asp-controller="Employee" asp-action="Update" asp-route-id="@employee.Id">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Edit
                                        </a>
                                        <a class="btn btn-danger btn-sm" asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id">
                                            <i class="fas fa-trash">
                                            </i>
                                            Delete
                                        </a>
                                    </td>

                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </div>
</div>